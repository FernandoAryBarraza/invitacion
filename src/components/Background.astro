---
import '../styles/global.css';

import Arcos from '../assets/paneles-arcos-para-boda-con-flores.webp';
---
<!-- Componente de fondo difuminado -->
<div class="background " style={`background-image: url(${Arcos.src});`}></div>
<style>
.background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-image: url('assets/paneles-arcos-para-boda-con-flores.webp'); */
    background-size: cover;
    background-position: center;
    filter: blur(8px);
    z-index: -1;
    opacity: 0.7;
}
</style>